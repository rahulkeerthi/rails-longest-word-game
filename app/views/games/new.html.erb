<h1>New Game</h1>
<div id="letters">
  <% @letters.each do |letter| %>
  <ul>
    <li><%= letter %></li>
  </ul>
  <% end %>
</div>
<div id="form">
  <form action="/score" method="post" class="form-input">
    <label>What is the longest word you can find?</label>
    <div id="answer">
      <input type="text" name="answer" placeholder="Enter word here..."></input><input id="button" type="submit" value="Play!"></input>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters.join %>
      <%= hidden_field_tag :end_time, Time.now %>
      <%= hidden_field_tag :start_time, @start_time %>
    </div>
  </form>
</div>

